@page
@using ListBlobFiles.Pages
@model IndexModel

<h2>List of files in Blob storage container</h2>

@if (Model.FilesInContainer == null)
{
    <p>Error: Unable to fetch file information from storage container.</p>
}
else if (Model.FilesInContainer.Count == 0)
{
    <p>No files found in storage container.</p>
}
else
{
<table>
    <thead>
        <tr>
            <th>Filename</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var filename in Model.FilesInContainer)
        {
            <tr>
                <td>@filename</td>
            </tr>
        }
    </tbody>
</table>
}
